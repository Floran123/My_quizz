{% extends 'base.html.twig' %}


{% block title %}Hello IndexController!
{% endblock %}


{% block body %}

	<div id="topnav">
		{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
			<a class="link" href="categorie/new">Cr√©er un nouveau quizz</a>
			<a class="link" href="{{ path('user_edit', {'id':app.user.id}) }}">Edit Profile</a>
			<a class="link" href="{{ path('app_logout') }}">Logout</a>
			{% if is_granted('ROLE_ADMIN') %}
				<a href="admin">Admin Crud</a>
			{% endif %}
		{% else %}
			<a href="register">Register</a>
			<a href="login">Login</a>
		{% endif %}
	</div>
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}

		ul {
			list-style-type: none;
		}
		li.sub {
			padding-left: 1em;
		}
		a {
			text-decoration: none;
		}
		a:hover {
			color: black;
		}
		.quizTitle {
			font-size: 20px;
		}
	</style>

	<div class="example-wrapper">

		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}
		<h1>My_Quizz</h1>
		{# app.user.username #}


		{% for categorie in categories %}
			<ul>
				<li>
					<a class="quizTitle" href="{{ path('question_index', {'id' : categorie.id}) }}">{{ categorie.name }}</a>
				</li>
				{% if is_granted('ROLE_ADMIN') %}
					<li class="sub">
						<a href="{{ path('categorie_show', {'id': categorie.id}) }}">show</a>
						<a href="{{ path('categorie_edit', {'id': categorie.id}) }}">edit</a>
					</li>
				{% endif %}
			</ul>
			<hr>
			<br>
		{% else %}
			<tr>
				<td colspan="3">no records found</td>
			</tr>
		{% endfor %}
	</div>
{% endblock %}
